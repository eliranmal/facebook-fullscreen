{
    "name": "facebook games fullscreen",
    "description": "adds a button to the page to make facebook games go fullscreen",
    "version": "0.1.1",
    "permissions": [
        "activeTab"
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "content_scripts": [{
        "matches": [
            "https://apps.facebook.com/*"
        ],
        "js": [
            "content-script.js"
        ],
        "run_at": "document_end"
    }],
    "browser_action": {
        "default_title": "go fullscreen",
        "default_icon": "images/logo-48.png"
    },
    "icons": {
        "48": "images/logo-48.png"
    },
    "homepage_url": "https://jsfiddle.net/eliranmal/su3vjt0o/",
    "manifest_version": 2
}
